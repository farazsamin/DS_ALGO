#include<iostream>
using namespace std;


struct node {
    int data;
    node * next;
};


//insert at the last of the list using pointer
node* Insert(node* head,int x){
    node* temp = new node;
    temp-> data = x;
    temp-> next = NULL;
    if(head==NULL) head = temp;
    else {
      node* temp2 = head;
      while(temp2->next != NULL){
        temp2 = temp2->next;
      }
      temp2->next = temp;
    }
    return head;
}

//Recursive Reverse  Print Function
void ReversePrint(node* p){
    if(p==NULL) return;
    ReversePrint(p->next);  // Just 2 Line InterChanges
    cout<<p->data<<" "; // Just 2 Line Interchange

}

int main(){
  node * head= NULL;
  head = Insert(head,2);
  head = Insert(head,3);
  head = Insert(head,5);
  head = Insert(head,7);
  ReversePrint(head);


}

/*
4
4 6 8 2
*/
