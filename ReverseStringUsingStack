#include<iostream>
#include<stack>
#include<cstring>
using namespace std;
//Reverse String using stack

void Reverse(char s[],int n){
    stack<char>str;
    //Pushing into stack
    for(int i=0;i<n;i++){
        str.push(s[i]);
    }
    //Reverse String
    for(int i=0;i<n;i++){
        s[i]=str.top();
        str.pop();
    }

}
int main(){
    char s[100];
    cout<<"Enter your words: " <<endl;
    gets(s);
    Reverse(s,strlen(s));
    cout<<s<<endl;

}

